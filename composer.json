{
    "name":         "addiks/symfony_rdm",
    "description":  "Helps with the use of domain driven design & rich domain model in symfony/doctrine applications.",
    "keywords":     ["doctrine2", "symfony", "php", "orm", "domain driven design"],
    "homepage":     "http://github.com/addiks/symfony_rdm",
    "type":         "library",
    "license":      "GPL-3.0-or-later",
    "authors":      [
        {
            "name":      "Gerrit Addiks",
            "email":     "gerrit@addiks.de",
            "homepage":  "http://addiks.net"
        }
    ],

    "require": {
        "php": ">=7.4.0",
        "doctrine/orm": "2.5.* || 2.6.*",
        "doctrine/dbal": "2.5.* || 2.6.*",
        "symfony/yaml": "^4.2",
        "psr/cache": "1.0.*",
        "symfony/framework-bundle": "^4.2"
    },

    "require-dev": {
        "phpunit/phpunit": "*",
        "symfony/thanks": "*",
        "malukenho/docheader": "*",
        "vimeo/psalm": ">4.0",
        "symfony/form": "^4.0",
        "symfony/expression-language": "^4.2",
        "infection/infection": "*"
    },

    "autoload": {
        "psr-4": {
            "Addiks\\RDMBundle\\":  ""
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }

}
